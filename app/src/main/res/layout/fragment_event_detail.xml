<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- title -->
    <TextView
        android:id="@+id/event_title_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Event Title"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/event_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/event_back_button"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:text="X"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="2dp" />

    <!-- description -->
    <TextView
        android:id="@+id/event_description_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Description: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_title_textview" />

    <TextView
        android:id="@+id/event_description_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="@string/lorem_ipsum"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_description_static" />

    <!-- organizer details -->
    <TextView
        android:id="@+id/organizer_name_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Organizer: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_description_textview" />

    <TextView
        android:id="@+id/event_organizer_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="String"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/organizer_name_static"
        app:layout_constraintStart_toEndOf="@+id/organizer_name_static"
        app:layout_constraintTop_toTopOf="@+id/organizer_name_static" />

    <!-- date and time details -->

    <TextView
        android:id="@+id/event_start_date_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Event Start: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organizer_name_static" />

    <TextView
        android:id="@+id/event_start_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_start_date_static"
        app:layout_constraintStart_toEndOf="@+id/event_start_date_static"
        app:layout_constraintTop_toTopOf="@+id/event_start_date_static" />

    <TextView
        android:id="@+id/event_end_date_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Event End: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_start_date_static" />

    <TextView
        android:id="@+id/event_end_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_end_date_static"
        app:layout_constraintStart_toEndOf="@+id/event_end_date_static"
        app:layout_constraintTop_toTopOf="@+id/event_end_date_static" />

    <TextView
        android:id="@+id/registration_open_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Registration Opens: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_end_date_static" />

    <TextView
        android:id="@+id/registration_open_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/registration_open_static"
        app:layout_constraintStart_toEndOf="@+id/registration_open_static"
        app:layout_constraintTop_toTopOf="@+id/registration_open_static" />

    <TextView
        android:id="@+id/registration_closes_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Registration Closes: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_open_static" />

    <TextView
        android:id="@+id/registration_closes_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/registration_closes_static"
        app:layout_constraintStart_toEndOf="@+id/registration_closes_static"
        app:layout_constraintTop_toTopOf="@+id/registration_closes_static" />

    <TextView
        android:id="@+id/event_max_waitlist_cap_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Max Waitlist Capacity: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_closes_static" />

    <TextView
        android:id="@+id/event_max_waitlist_cap_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Int"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_max_waitlist_cap_static"
        app:layout_constraintStart_toEndOf="@+id/event_max_waitlist_cap_static"
        app:layout_constraintTop_toTopOf="@+id/event_max_waitlist_cap_static" />

    <TextView
        android:id="@+id/event_max_cap_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Max Event Capacity: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_max_waitlist_cap_static" />

    <TextView
        android:id="@+id/event_max_cap_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Int"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_max_cap_static"
        app:layout_constraintStart_toEndOf="@id/event_max_cap_static"
        app:layout_constraintTop_toTopOf="@+id/event_max_cap_static" />

    <TextView
        android:id="@+id/waitlist_status_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Waitlist Status: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_max_cap_static" />

    <TextView
        android:id="@+id/waitlist_status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boolean"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/waitlist_status_static"
        app:layout_constraintStart_toEndOf="@id/waitlist_status_static"
        app:layout_constraintTop_toTopOf="@+id/waitlist_status_static" />

    <Button
        android:id="@+id/event_waitlist_join_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Join Waitlist"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>