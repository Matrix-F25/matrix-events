<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.EntrantMyEventsActivity">

    <!-- Mode Switcher -->
    <LinearLayout
        android:id="@+id/mode_switch_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entrant_switch_to_org_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Organizer View"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"/>
    </LinearLayout>

    <TextView
        android:id="@+id/entrant_title_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="My Events"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode_switch_container" />

    <!-- Filter Buttons (Toggle Group) -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/filter_toggle_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/entrant_waitlisted_button"
        app:layout_constraintTop_toBottomOf="@+id/entrant_title_static"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entrant_waitlisted_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Waitlist"
            android:textSize="10sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="48dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"
            app:backgroundTint="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entrant_pending_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pending"
            android:textSize="10sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="48dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entrant_accepted_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accepted"
            android:textSize="10sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="48dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entrant_declined_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Declined"
            android:textSize="10sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="48dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entrant_not_selected_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not Selected"
            android:textSize="10sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="48dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/entrant_list_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Waitlisted"
        android:textColor="#616161"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_toggle_group" />

    <ListView
        android:id="@+id/entrant_listview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrant_list_title_textview" />

    <FrameLayout
        android:id="@+id/navigation_bar_fragment"
        android:name="com.example.matrix_events.fragments.NavigationBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>