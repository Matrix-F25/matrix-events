<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:id="@+id/settings_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="-16dp"
            android:layout_marginEnd="-16dp"
            android:layout_marginTop="-16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_back_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_button_text"
                android:textColor="#388E3C"
                app:icon="@drawable/abc_ic_ab_back_material"
                app:iconTint="#388E3C"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/settings_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_page_title"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- Notification Settings Header -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_page_header"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:drawableLeftCompat="@drawable/ic_blank_notification"
            app:drawableTint="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Divider -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:dividerColor="#E0E0E0"/>

        <!-- Push Notifications Header -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/push_notifications_header"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginBottom="8dp"/>

        <!-- Push Admin Switch -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/push_admin_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_switch"
            android:paddingStart="20dp"
            app:thumbTint="#388E3C"
            app:trackTint="#C8E6C9"
            tools:ignore="RtlSymmetry" />

        <!-- Push Organizer Switch -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/push_organizer_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/organizer_switch"
            android:paddingStart="20dp"
            app:thumbTint="#388E3C"
            app:trackTint="#C8E6C9"
            tools:ignore="RtlSymmetry" />


        <!-- Divider -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:dividerColor="#E0E0E0"/>

        <!-- Logout Button  -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_logout_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/logout_button_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            app:strokeColor="#388E3C"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            android:layout_marginBottom="12dp" />

        <!-- Delete Profile Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_delete_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/delete_profile_button_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            app:strokeColor="#D32F2F"
            app:cornerRadius="10dp"
            app:strokeWidth="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Terms & Conditions Clickable Header -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/terms_conditions_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/terms_conditions_header"
            android:textSize="15sp"
            android:textStyle="italic"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            app:drawableLeftCompat="@drawable/ic_terms_conditions"
            app:drawableTint="#757575"/>

    </LinearLayout>

</ScrollView>
