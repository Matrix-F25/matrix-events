<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Event Details -->
        <EditText
            android:id="@+id/event_name_input"
            android:hint="Event Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/event_description_input"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/event_capacity_input"
            android:hint="Event Capacity"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Waitlist Capacity (optional) -->
        <EditText
            android:id="@+id/waitlist_capacity_input"
            android:hint="Waitlist Capacity (optional)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Geolocation -->
        <EditText
            android:id="@+id/event_location_input"
            android:hint="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Switches -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/is_reoccurring_switch"
            android:text="Is Reoccurring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Reoccurring Details -->
        <LinearLayout
            android:id="@+id/reoccurring_section"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Spinner
                android:id="@+id/reoccurring_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reoccurring_end_date_btn"
                android:text="Select Reoccurring End Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/geolocation_tracking_switch"
            android:text="Enable Geolocation Tracking"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Date/Time Buttons -->
        <Button
            android:id="@+id/reg_start_date_btn"
            android:text="Select Registration Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/reg_end_date_btn"
            android:text="Select Registration End"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/event_start_date_btn"
            android:text="Select Event Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/event_end_date_btn"
            android:text="Select Event End"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Poster Upload -->
        <Button
            android:id="@+id/upload_poster_btn"
            android:text="Upload Poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Create Button -->
        <Button
            android:id="@+id/create_event_btn"
            android:text="Create Event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/back_btn"
            android:text="Back"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"/>

    </LinearLayout>
</ScrollView>
